{
    "manifest_version": 3,
    "name": "Digital Wellbeing",
    "version": "1.0.0",
    "description": "Monitor your browsing time by categories.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "permissions": [
        "storage",
        "tabs",
        "webNavigation",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}